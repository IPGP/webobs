#!/bin/bash
P=`dirname $0`
. ${P}/dutils.sh

# can be run any time after linux dependencies installation
# current directory (pwd) MUST be the target webob's CONF/ directory

echo "Creating owners tables ..."
sqlite3 WEBOBSOWNERS.db <<EOF
BEGIN TRANSACTION;
drop table if exists owners;
create table owners(
	JID            		integer NOT NULL primary key autoincrement,
	Identifier	 		text,
	Name           		text,
	Title		   		text,
	Description	   		text,
	Objective	   		text,
	MeasuredVariable	text,
	Email				text,
	Contacts	   		text,
	Funders		   		text,
	OnlineResource		text
	);
COMMIT;
insert into owners values(null,'OBSE','OBSERA','Observatoire de l''Eau et de l''Erosion aux Antilles','L''Observatoire de l''Eau et de l''Erosion aux Antilles (ObsERA) est un service d''observation de l''INSU-CNRS et de l''Institut de Physique du Globe de Paris consacré à l''étude de l''altération et de l''érosion aux Antilles. Membre du Réseau de Bassins Versants de Recherche et du Critical Zone Observatory Network, il implique des équipes de l''Institut de Physique du Globe de Paris, de l''Observatoire Volcanologique et Sismologique de Guadeloupe, de l''Université Antilles-Guyane, de l''Institut Universitaire Européen de la Mer (UBO) et du Laboratoire de Sciences de la Terre de l''Université Claude Bernard (Lyon I).','Constituer une base de données des flux d''eau, des flux de sédiments et de matière organique (en particulier de carbone) dans les rivières et sur les versants ainsi que de la composition chimique des rivières et des sols dans le contexte particulier de l''île de Basse-Terre en Guadeloupe, marquée par un climat tropical et un volcanisme actif. Cette base de données permettra à la communauté scientifique d''étudier et de quantifier les modes de d''érosion chimique et physique, ainsi que leur impact sur l''environnement (composition des sols, chimie des rivières, flux de carbones, etc...)','Flux d''eau (précipitations et débit des rivières), Flux de sédiments et de matière organique, composition chimique des sols','lajeunes@ipgp.fr','projectLeader:lajeunes@ipgp.fr','FrenchResearchInstitutes:197534282_,FrenchResearchInstitutes:201119400U_,FrenchResearInstitutes:199612326V','http:info@http://webobsera.ipgp.fr/');
EOF

echo "Done."
exit 0

